
<ul id="lists">
  <% @lists.each_with_index do |list, index| %>
    <li class="<%= list_class(list) %>">
      <a href= "/lists/<%= index %>">
        <h2><%= list[:name] %></h2> 
          <p>
            <%= count_incomplete_todo_items(list) %> / <%= count_total_todo_items(list) %>
          </p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do%>
  <a class="add" href="/lists/new">New List</a>
<% end %>